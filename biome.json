{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "warn"
      }
    }
  },
  "files": {
    "ignoreUnknown": true,
    "ignore": ["**/dist/**", ".astro", ".prettierrc.cjs", ".prettierignore"]
  }
}
